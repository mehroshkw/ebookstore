<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".Seller.SellerMain">

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY PROFILE"
        android:padding="10dp"
        android:layout_marginTop="52sp"
        android:layout_marginHorizontal="50sp"
        android:layout_marginBottom="10dp"
        android:onClick="sellerGoProfile"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/btnCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MANAGE BOOKS"
        android:padding="10dp"
        android:layout_marginHorizontal="50sp"
        android:layout_marginBottom="10dp"
        android:onClick="sellerGoMngBooks"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/btnPendingOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PENDING ORDERS"
        android:padding="10dp"
        android:layout_marginHorizontal="50sp"
        android:layout_marginBottom="10dp"
        android:onClick="sellerGoPendingOrders"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/btnOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDERS HISTORY"
        android:padding="10dp"
        android:onClick="sellerGoOrders"
        android:layout_marginHorizontal="50sp"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN OUT"
        android:layout_marginHorizontal="50sp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="sellerGoLogout"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>